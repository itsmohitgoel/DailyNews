<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mohit.example.dailynews.HomeActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/newslist_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/empty_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/newslist_recycler_view"
        app:layout_constraintEnd_toEndOf="@+id/newslist_recycler_view"
        app:layout_constraintStart_toStartOf="@+id/newslist_recycler_view"
        tools:text="@string/heading_empty_data_set"
        app:layout_constraintTop_toTopOf="@+id/newslist_recycler_view" />

    <ProgressBar
        android:id="@+id/loading_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/newslist_recycler_view"
        app:layout_constraintEnd_toEndOf="@+id/newslist_recycler_view"
        app:layout_constraintStart_toStartOf="@+id/newslist_recycler_view"
        app:layout_constraintTop_toTopOf="@+id/newslist_recycler_view"
        app:layout_constraintVertical_bias="0.499" />
</android.support.constraint.ConstraintLayout>
